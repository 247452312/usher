<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.opentech.usher.dao.AiDeviceInstructionDao">
    <resultMap type="team.opentech.usher.pojo.DO.AiDeviceInstructionDO" id="AiDeviceInstructionMap">
        <result property="id" column="id" jdbcType="BIGINT"/>
        <result property="createDate" column="create_date" jdbcType="BIGINT"/>
        <result property="createUser" column="create_user" jdbcType="BIGINT"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="BIT"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
        <result property="updateDate" column="update_date" jdbcType="BIGINT"/>
        <result property="updateUser" column="update_user" jdbcType="BIGINT"/>
        <result property="deviceInstructionNo" column="device_instruction_no" jdbcType="VARCHAR"/>
        <result property="context" column="context" jdbcType="TEXT"/>
        <result property="deviceId" column="device_id" jdbcType="BIGINT"/>
        <result property="notes" column="notes" jdbcType="VARCHAR"/>
    </resultMap>

    <!--批量通过主键修改数据-->
    <update id="updateBatch"
            parameterType="team.opentech.usher.pojo.DO.AiDeviceInstructionDO">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            update sys_ai_device_instruction
            set update_date = #{item.updateDate}
            ,update_user = #{item.updateUser}
            <if test="id != null">
                ,id = #{id}
            </if>
            <if test="createDate != null">
                ,create_date = #{createDate}
            </if>
            <if test="createUser != null">
                ,create_user = #{createUser}
            </if>
            <if test="deleteFlag != null">
                ,delete_flag = #{deleteFlag}
            </if>
            <if test="remark != null and remark != ''">
                ,remark = #{remark}
            </if>
            <if test="updateDate != null">
                ,update_date = #{updateDate}
            </if>
            <if test="updateUser != null">
                ,update_user = #{updateUser}
            </if>
            <if test="deviceInstructionNo != null and deviceInstructionNo != ''">
                ,device_instruction_no = #{deviceInstructionNo}
            </if>
            <if test="context != null and context != ''">
                ,context = #{context}
            </if>
            <if test="deviceId != null">
                ,device_id = #{deviceId}
            </if>
            <if test="notes != null and notes != ''">
                ,notes = #{notes}
            </if>
            where ${pkColumn.name} = #{${pkColumn.smallName}}
        </foreach>
    </update>
</mapper>
